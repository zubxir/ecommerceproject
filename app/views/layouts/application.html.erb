<!DOCTYPE html>
<html>
  <head>
    <title>Cotton Road</title>
        <%= link_to "Home", "http://localhost:3000/welcome"%>
        <%= link_to "Products", "http://localhost:3000/products"%>
        <%= link_to "About", "http://localhost:3000/about"%>
        <%= link_to "Categories", "http://localhost:3000/category"%>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
    <%= yield %>
  </body>
</html>
